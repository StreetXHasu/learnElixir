<h1>Next Event</h1>
<p>Start from: <%= @start %> | Limit: <%= @limit %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th>Repeat</th>
      <th>Repaet days week</th>
      <th>Repaet end</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for event <- @events do %>
      <tr class={"flex #{if event.color, do: 'bg-yellow'}"}>
        <td>
          <strong><%= event.name %></strong> <br /> <%= event.description %>
        </td>
        <td>
          <%= event.date_start %>
        </td>
        <td>
          <%= event.date_end %>
        </td>
        <td>
          <%= event.repeat %>
        </td>
        <td>
          <%= event.repeat_days_week %>
        </td>
        <td>
          <%= event.repeat_date_end %>
        </td>
        <td>
          <span>
            <%= link("Show", to: Routes.event_path(@conn, :show, event)) %>
          </span>
          <span>
            <%= link("Edit", to: Routes.event_path(@conn, :edit, event)) %>
          </span>
          <span>
            <%= link("Delete",
              to: Routes.event_path(@conn, :delete, event),
              method: :delete,
              data: [confirm: "Are you sure?"]
            ) %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span>
  <%= link("New Event", to: Routes.event_path(@conn, :new)) %>
</span>
